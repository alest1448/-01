<Window x:Class="pachka.edit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pachka"
        mc:Ignorable="d"
        Title="edit" Height="800" Width="300" Icon="/Большая пачка.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="485*"/>
            <RowDefinition Height="299*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid HorizontalAlignment="Left" Height="977" Margin="0,10,0,0" VerticalAlignment="Top" Width="328" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFFFE1" Offset="1"/>
                    <GradientStop Color="#FFFFC1C1" Offset="0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <TextBox x:Name="tbName" HorizontalAlignment="Center" Height="33" Margin="0,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" FontFamily="Tw Cen MT"/>
            <TextBox x:Name="tbType" HorizontalAlignment="Center" Height="33" Margin="0,187,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" FontFamily="Tw Cen MT"/>
            <TextBox x:Name="tbPrice" HorizontalAlignment="Center" Height="33" Margin="0,301,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" FontFamily="Tw Cen MT"/>
            <TextBox x:Name="tbSklad" HorizontalAlignment="Center" Height="33" Margin="0,358,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" FontFamily="Tw Cen MT"/>
            <TextBox x:Name="tbMax" HorizontalAlignment="Center" Height="33" Margin="0,414,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" FontFamily="Tw Cen MT"/>
            <Label Content="Наименование" HorizontalAlignment="Center" Height="30" Margin="0,96,0,0" VerticalAlignment="Top" Width="100"/>
            <Label Content="Тип" HorizontalAlignment="Center" Height="30" Margin="0,152,0,0" VerticalAlignment="Top" Width="100"/>
            <Label Content="Изображение" HorizontalAlignment="Center" Height="30" Margin="0,217,0,0" VerticalAlignment="Top" Width="100"/>
            <Label Content="Цена" HorizontalAlignment="Center" Height="30" Margin="0,271,0,0" VerticalAlignment="Top" Width="128"/>
            <Label Content="Склад" HorizontalAlignment="Center" Height="30" Margin="0,334,0,0" VerticalAlignment="Top" Width="100"/>
            <Label Content="Макс. количество" HorizontalAlignment="Center" Height="30" Margin="0,384,0,0" VerticalAlignment="Top" Width="100"/>
            <Label Content="Количество в упаковке" HorizontalAlignment="Center" Height="30" Margin="0,447,0,0" VerticalAlignment="Top" Width="100"/>
            <Button x:Name="btAdd" Content="Сохранить" HorizontalAlignment="Center" Height="27" Margin="0,616,0,0" VerticalAlignment="Top" Width="190" Click="btAdd_Click" Background="#FFD32B39" Foreground="White"/>
            <Button  x:Name="tbBack" Content="Назад" HorizontalAlignment="Left" Height="32" Margin="10,10,0,0" VerticalAlignment="Top" Width="69" Click="tbBack_Click" Background="#FFD32B39" Foreground="White" RenderTransformOrigin="0.411,-1.015"/>
            <TextBox x:Name="tbEd" HorizontalAlignment="Center" Height="34" Margin="0,543,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" FontFamily="Tw Cen MT"/>
            <Label Content="Единица измерения" HorizontalAlignment="Center" Height="30" Margin="0,513,0,0" VerticalAlignment="Top" Width="100"/>
            <TextBox x:Name="tbKolvo" HorizontalAlignment="Center" Height="33" Margin="0,475,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" FontFamily="Tw Cen MT"/>
            <TextBox x:Name="tbImage" HorizontalAlignment="Center" Height="33" Margin="0,238,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190" FontFamily="Tw Cen MT"/>
            <Label Content="ID:" HorizontalAlignment="Left" Height="27" Margin="73,60,0,0" VerticalAlignment="Top" Width="36"/>
            <TextBox x:Name="tbID" HorizontalAlignment="Left" Height="37" Margin="114,54,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="49"/>
        </Grid>

    </Grid>
</Window>
